          <a class="navbar-brand" href="../index.html">
            <img
              src="assets/images/Logo/logo white.png"
              class="main-logo"
              width="130"
              alt=""
            />
            <img
              src="assets/images/Logo/isadora std regula font - Copy.png"
              class="logo-2"
              width="130"
              alt=""
            />
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <i class="las la-bars"></i>
          </button>

          <div
            class="collapse navbar-collapse justify-end"
            id="navbarSupportedContent"
          >
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link" href="contact.html">Email@gmail.com</a>
              </li>
              <li
                class="nav-item"
              >
                <img
                style="border-radius: 50%; border: 1px solid rgb(81, 80, 80)"
                  src="login/img/profile.png"
